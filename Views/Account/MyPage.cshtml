@{
    ViewData[index: "Title"] = "My Page";
}

@model UserViewModel

<div class="user-profile">
    <h2>マイページ</h2>
    <ul>
        <li><strong>ユーザーID:</strong> @Model.UserId</li>
        <li><strong>ユーザー名:</strong> @Model.UserName</li>
        <li><strong>ロール:</strong> @Model.Role</li>
        <li><strong>学年:</strong> @(Model.Grade ?? "学年が選択されていません")</li>
        <li><strong>累計スコア:</strong> @Model.TotalScores</li>
    </ul>

    @if (Model.IntsAnsweredbyDifficulty != null && Model.IntsAnsweredbyDifficulty.Length == 5)
    {
        <h3>難易度別の統計</h3>
        <div class="difficulty-cards">
            @for (int i = 0; i < 5; i++)
            {
                var label = ((char)('A' + i)).ToString(); // A〜E
                var answered = Model.IntsAnsweredbyDifficulty[i];
                var totalScore = Model.ScoresbyDifficulty?[i] ?? 0;
                var averageScore = Model.AverageScoresbyDifficulty?[i].ToString("0.00") ?? "0.00";
    
                <div class="field-card difficulty-card">
                    <h4>難易度 @label</h4>
                    <p>解答数：<span class="count">@answered</span></p>
                    <p>合計スコア：<span class="count">@totalScore</span></p>
                    <p>平均スコア：<span class="count">@averageScore</span></p>
                </div>
            }
        </div>
    }

    else
    {
        <p>難易度別の統計情報はまだありません。</p>
    }
</div>

