@{
    ViewData["Title"] = "LookAnswer Page";
}

@model AnswerViewModel

<div class="que">
    <div style="text-align: right; margin-top: 10px;">
        <button class="send" onclick="setPrintMode('problem')">問題のみ印刷</button>
        <button class="send" onclick="setPrintMode('all')">印刷</button>
    </div>
    <br>
    <div class="latex problem">
        @Html.Raw(Model.Problem)
    </div><br>
    <div class="latex answer">
        @Html.Raw(Model.Answer)
    </div><br>
    <p style="display: flex; justify-content: flex-end;">編集者：@Model.Teacher</p><br>
    @if (User.Identity != null && (User.IsInRole("Teacher") || User.IsInRole("Admin")))
    {
        <div class="ans-but">
            <form method="post" asp-area="" asp-controller="Problem" asp-action="EditProblem"
            value=@Model style="text-align: right;">
                <button class="send" name="serial" value="@ViewBag.Message">この問題の情報を編集する</button>
            </form>
        </div>
    }
</div>

<a id="backToMainBtn" class="move-button" href="/Home/Index">問題ページへ</a>
