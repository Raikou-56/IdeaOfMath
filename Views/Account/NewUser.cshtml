@model RegisterViewModel

@{
    ViewData["Title"] = "NewUser Page";
}
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="register-card">
    <h2><i class="fas fa-user-plus"></i> 新規登録</h2>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="form-group modern-input">
            <label asp-for="MailAddress"><i class="fas fa-envelope"></i> メールアドレス</label>
            <input asp-for="MailAddress" class="form-control modern-control" />
            <span asp-validation-for="MailAddress" class="text-danger"></span>
            <small class="form-text text-muted">※メールアドレスはログイン時のユーザーIDとなります。</small>
        </div>

        <div class="form-group modern-input">
            <label asp-for="Username"><i class="fas fa-user"></i> ユーザー名</label>
            <input asp-for="Username" class="form-control modern-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group modern-input">
            <label asp-for="Password"><i class="fas fa-lock"></i> パスワード</label>
            <input asp-for="Password" class="form-control modern-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text text-muted">※半角英数字8文字以上</small>
        </div>

        <div class="form-group modern-input">
            <label asp-for="ConfirmPassword"><i class="fas fa-lock"></i> パスワード確認</label>
            <input asp-for="ConfirmPassword" class="form-control modern-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group modern-input">
            <label asp-for="Role"><i class="fas fa-user-tag"></i> 区分</label>
            <select asp-for="Role" class="form-control modern-control">
                <option value="Student">学生</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group modern-input">
            <label asp-for="Grade"><i class="fas fa-school"></i> 学年</label>
            <select asp-for="Grade" class="form-control modern-control">
                <option value="">選択してください</option>
                <option value="中学生">中学生</option>
                <option value="高校1年生">高校1年生</option>
                <option value="高校2年生">高校2年生</option>
                <option value="高校3年生">高校3年生</option>
                <option value="浪人生">浪人生</option>
                <option value="大学生以上">大学生以上</option>
            </select>
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>

        <div class="form-group text-end">
            <button type="submit" class="send">登録する</button>
        </div>
    </form>
</div>
