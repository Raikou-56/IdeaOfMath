@{
    ViewData["Title"] = "Teacher Page";
}

@model TeacherViewModel

<div style="padding:30px; max-width:650px; margin:auto;">
    <p class="tst">こちらは教師専用ページです。</p><br>
    <p class="tst">
        現在データベースに登録されてる問題は @(Model.ProblemsCount != null ? Model.ProblemsCount[0] : 0) 問です
        (@(Model.ProblemsCount != null ? Model.ProblemsCount[1] : 0) 問公開中)
    </p>

    <a class="nav-link text-dark" asp-area="" asp-controller="Problem" asp-action="SaveProblem">
        <button class="send">問題を投稿する</button>
    </a>

    <br />
    <div class="field-counts">
        @foreach (var pair in Model.FieldCounts ?? new Dictionary<string, int>())
        {
            <div class="field-card">
                <h3>@pair.Key</h3>
                <p><span class="count">@pair.Value</span> 問</p>
            </div>
        }
    </div>
    <br>
    <a id="backToMainBtn" class="move-button" href="/Home/Index">問題ページへ</a>
</div>
